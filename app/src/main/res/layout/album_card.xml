<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/album_card_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="8dp"
    app:contentPadding="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/album_constraint_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/album_cover"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="@+id/album_constraint_container"
            app:layout_constraintLeft_toLeftOf="@+id/album_constraint_container"
            />
        <ImageButton
            android:id="@+id/button_album_play"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="@+id/album_cover"
            app:layout_constraintLeft_toLeftOf="@+id/album_cover"
            android:src="@drawable/ic_play_circle_outline_black_160dp"
            android:alpha="0.4"
            android:background="@android:color/transparent"
            />
        <TextView
            android:id="@+id/album_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/album_cover"
            app:layout_constraintLeft_toRightOf="@+id/album_cover"
            app:layout_constraintRight_toRightOf="@+id/album_constraint_container"
            android:paddingLeft="8dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/album_artist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/album_title"
            app:layout_constraintLeft_toLeftOf="@+id/album_title"
            app:layout_constraintRight_toRightOf="@+id/album_constraint_container"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/album_num_tracks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/album_artist"
            app:layout_constraintLeft_toLeftOf="@+id/album_title"
            app:layout_constraintRight_toRightOf="@+id/album_constraint_container"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
